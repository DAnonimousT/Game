namespace IndentifyCharacter
{
    class Program
    {
        static void Main(string[] args)
        {
            Stats playerStats = new Stats();
            Console.WriteLine("Username");
            string username = Console.ReadLine();

            Stats(playerStats.range, playerStats.health, playerStats.attackDamage, playerStats.armor);

            Console.ReadLine();
        }
        static void Stats(int range, int health, int attackDamage, double armor)
        {
            while (true)
            {
                string type = Console.ReadLine();
                switch (type)
                {
                    case "Archer":
                        range += 9;
                        break;
                    case "Fighter":
                        health += 50;
                        break;
                    case "Assasin":
                        attackDamage += 15;
                        break;
                    case "Tank":
                        armor += 0.3;
                        break;
                }
                break;
            }
            Console.WriteLine($"Health: {health} \t Damage: {attackDamage} \t Range: {range} \t Armor: {armor}");
        }
    }
    class Stats
    {
        public const int bagpack = 100;
        public int health = 100;
        public int attackDamage = 5;
        public int range = 1;
        public double armor = 0.1;
       
    }
}
